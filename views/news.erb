  <body>
  <nav class="navbar navbar-light bg-light">
  <a class="navbar-brand" href="/">News just for you...</a>
  </nav>
  <div class=row>
  </div>
                         
   <div class="container">
     <h1>News</h1>
    </div>

    <div class="container">
        <div class=row>
            <div class = "col-md-12">
                <h2>Current Weather Conditions in <%= @location %>:</h2>
             </div>
        </div>

        <div class=row>
            <div class = "col-md-12">
                <h3>Right now it is <%= @current_temperature %> degrees and <%= @current_conditions %>.</h3>
             </div>
        </div>
    </div>

    <div class="container">
      <div class=row>
            <div class = "col-md-12">
                  <h2>Weather Forecast for <%= @location %>:</h2>
             </div>
        </div>
        <div class=row>
         <div class = "col-md-12">
            <table class="table">
            <thead>
                <tr>
                <th scope="col"></th>
                <th scope="col">Today</th>
                <th scope="col">Tomorrow</th>
                <th scope="col">Two Day</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                <th scope="row">High Temp</th>
                <td><%= @today_high %> </td>
                <td><%= @tomorrow_high %> </td>
                <td><%= @twoday_high %></td>
                </tr>
                <tr>
                <th scope="row">Low Temp</th>
                <td><%= @today_low %> </td>
                <td><%= @tomorrow_low %> </td>
                <td><%= @twoday_low %></td>
                </tr>
                <tr>
                <th scope="row">Conditions</th>
                <td><%= @today_summary %> </td>
                <td><%= @tomorrow_summary %> </td>
                <td><%= @twoday_summary %></td>
                </tr>
            </tbody>
            </table>
        </div>
        </div>
    </div>
    
    <div class="container">
     <div class=row>
        <div class = "col-md-12">
            <h2>Top 5 Headlines:</h2>
        </div>
    </div>

    <div class=row>
        <div class = "col-md-12">
            <h3>
            <a href="<%= @url0 %>" title=""><%= @title0 %></a>
            </h3>
            <p><%= @description0 %></p>
        </div>
    </div>
 
    <div class=row>
        <div class = "col-md-12">
            <h3>
            <a href="<%= @url1 %>" title=""><%= @title1 %></a>
            </h3>
