            <h3>
            <a href="<%= @url2 %>" title=""><%= @title2 %></a>
            </h3>
            <p><%= @description2 %></p>
        </div>
    </div>

    <div class=row>
        <div class = "col-md-12">
            <h3>
            <a href="<%= @url3 %>" title=""><%= @title3 %></a>
            </h3>
            <p><%= @description3 %></p>
        </div>
    </div> 

    <div class=row>
        <div class = "col-md-12">
            <h3>
            <a href="<%= @url4 %>" title=""><%= @title4 %></a>
            </h3>
            <p><%= @description4 %></p>
        </div>
    </div>
    
    </div>

    <footer class="footer">
      <div class="container">
        <span class="text-muted">News just for you</span>
      </div>
    </footer>
       

   



